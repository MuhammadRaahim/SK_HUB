<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.AddProductFragment">
    <RelativeLayout
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <ImageView
            android:id="@+id/back_IV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_15ssp"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/ic_back"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/str_todo" />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/str_add_product"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            android:textAllCaps="true"
            android:textStyle="bold" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="@dimen/_40sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:text="Images:"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_95sdp"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/bg_edittext"
                app:layout_constraintTop_toBottomOf="@+id/tv_image" />
            <ImageView
                android:id="@+id/iv_edit_image"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_margin="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/bg_circle_white"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_camera"
                app:layout_constraintBottom_toBottomOf="@id/iv"
                app:layout_constraintEnd_toEndOf="@+id/iv"
                app:tint="@color/white" />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Title:"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv" />
            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_18sdp"
                android:background="@drawable/bg_edittext"
                android:hint="@string/str_enter_title"
                android:inputType="text"
                android:padding="@dimen/_8sdp"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/tv_owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Categories:"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_title" />
            <TextView
                android:id="@+id/tv_owner_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="SubCategories:(opt)"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_owner_name"
                app:layout_constraintTop_toBottomOf="@+id/et_title" />
            <LinearLayout
                android:id="@+id/ll_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintTop_toBottomOf="@+id/tv_owner_name">

                <EditText
                    android:id="@+id/sp_categories"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:editable="false"
                    android:inputType="text"
                    android:padding="@dimen/_3sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:textSize="@dimen/_14sdp"
                    android:focusableInTouchMode="false"
                    android:autofillHints="Category"
                    android:background="@drawable/bg_edittext"/>
                <EditText
                    android:id="@+id/sp_sub_categories"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:autofillHints="Sub Category"
                    android:background="@drawable/bg_edittext"
                    android:padding="@dimen/_3sdp"
                    android:visibility="visible" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Prize:"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_category" />
            <EditText
                android:id="@+id/et_priza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_18sdp"
                android:background="@drawable/bg_edittext"
                android:hint="@string/str_enter_price"
                android:inputType="number"
                android:padding="@dimen/_8sdp"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintTop_toBottomOf="@+id/tv_price"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/tv_brands"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Brand:"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_priza" />
            <EditText
                android:id="@+id/et_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_18sdp"
                android:background="@drawable/bg_edittext"
                android:hint="@string/str_select_brand"
                android:inputType="text"
                android:padding="@dimen/_8sdp"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintTop_toBottomOf="@+id/tv_brands"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Size:"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_brand" />
            <EditText
                android:id="@+id/et_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_18sdp"
                android:background="@drawable/bg_edittext"
                android:hint="Enter Size"
                android:inputType="number"
                android:padding="@dimen/_8sdp"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintTop_toBottomOf="@+id/tv_size"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/tv_colour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Colour:"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_size" />
            <EditText
                android:id="@+id/et_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_18sdp"
                android:background="@drawable/bg_edittext"
                android:hint="Enter colour"
                android:inputType="text"
                android:padding="@dimen/_8sdp"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintTop_toBottomOf="@+id/tv_colour"
                tools:ignore="RtlSymmetry" />
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Description:"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_color" />
            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_below="@id/iv"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_18sdp"
                android:background="@drawable/bg_edittext"
                android:hint="@string/str_enter_product_description"
                android:inputType="text"
                android:gravity="start"
                android:maxLines="4"
                android:padding="@dimen/_8sdp"
                android:paddingStart="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintTop_toBottomOf="@+id/tv_description"
                tools:ignore="RtlSymmetry" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:text="@string/str_add_product"
                android:padding="@dimen/_8sdp"
                app:cornerRadius="@dimen/_70sdp"
                android:textColor="@color/white"
                android:backgroundTint="@color/purple_800"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintTop_toBottomOf="@+id/et_description" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</RelativeLayout>