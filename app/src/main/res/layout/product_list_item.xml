<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_130sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_12sdp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardBackgroundColor="@color/white"
        android:elevation="@dimen/_20sdp"
        android:background="@color/white"
        app:cardMaxElevation="@dimen/_7sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/purple_800"
        android:translationZ="@dimen/_1sdp"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/tv_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_2sdp"
            android:text="New"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_wishlist"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:elevation="@dimen/_5sdp"
        android:background="@drawable/bg_white_circle"
        android:translationZ="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_4sdp">
        <com.varunest.sparkbutton.SparkButton
            android:id="@+id/sb_wishlist"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerInParent="true"
            android:elevation="@dimen/_5sdp"
            app:sparkbutton_activeImage="@drawable/img_add_whishlist_heart"
            app:sparkbutton_iconSize="@dimen/_15sdp"
            app:sparkbutton_inActiveImage="@drawable/img_white_heart"
            app:sparkbutton_primaryColor="@color/purple_800"
            app:sparkbutton_secondaryColor="@color/purple_800" />
    </RelativeLayout>
            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:contentDescription="@string/str_todo"
                android:scaleType="centerCrop"
                android:src="@drawable/img_product_placeholder" />
    <RelativeLayout
        android:id="@+id/rl_sold_out"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:alpha="0.7"
        android:visibility="gone"
        android:background="@color/transparentPurple">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Sold Out"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />
    </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:id="@+id/rl_name_rating"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_120sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:translationZ="@dimen/_5sdp"
        android:background="@drawable/bg_white_with_border">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:maxLines="1"
            android:text="@string/str_product_name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="@string/str_rs_500"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:lines="1"
            android:maxLines="1"
            android:text="@string/str_location"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="@string/Str_date"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>
</RelativeLayout>